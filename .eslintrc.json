{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error", {
    "tabWidth": 4,
    "useTabs": true,
    "endOfLine": "auto"
  }],
  "indent": ["error", "tab"], // Override Airbnb's indentation to use tabs
  "no-tabs": "off" // Turn off the no-tabs rule from Airbnb
  }
}