{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,  // Add this line to specify the browser environment
    "es2021": true    // Ensure support for ES2021 features
  },
  "rules": {
    "prettier/prettier": ["error", {
    "tabWidth": 4,
    "useTabs": true,
    "endOfLine": "auto"
  }],
  "indent": ["error", "tab"], // Override Airbnb's indentation to use tabs
  "no-tabs": "off" // Turn off the no-tabs rule from Airbnb
  }
}